{
  "manifest_version": 2,
  "name": "Google Chat Tab",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.5",
  "author": "Nicola Ferralis",
  "homepage_url": "https://github.com/feranick/Thunderbird-Google-Chat-Tab/",
  "applications": {
    "gecko": {
      "id": "feranick.google-chat-tab@addons.thunderbird.net",
      "strict_min_version": "78.0"
    }
  },
  "default_locale": "en",
  "icons": {
    "48": "skin/google_chat_icon.svg",
    "96": "skin/google_chat_icon.svg"
  },
  "browser_action": {
    "default_title": "Google Chat",
    "default_icon": "skin/google_chat_icon.svg"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  }
}
